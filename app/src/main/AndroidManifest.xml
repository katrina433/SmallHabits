<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.habitbuilder">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/BrownTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PomodoroTimer"
            android:launchMode="singleInstance">
        </activity>
        <activity android:name=".AddTask" />
        <activity android:name=".TaskDetail" />
        <activity android:name=".AddMemo" />
        <activity android:name=".DisplayMemo" />
        <activity android:name=".Charts" />
        <activity android:name=".EditRewards" />

        <receiver
            android:name=".ReminderBroadcast"
            android:enabled="true"
            android:exported="true"/>
    </application>

</manifest>